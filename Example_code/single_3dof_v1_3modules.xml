                <geom name="body_3_2" type="mesh" mesh="body2_mesh" pos="0 0 0" euler="0 180 0"/>
                <inertial pos="0 0 0" mass="50e-3" diaginertia="1 1 1"/>

                    <body name="body_3_4" pos="0 0 0">
