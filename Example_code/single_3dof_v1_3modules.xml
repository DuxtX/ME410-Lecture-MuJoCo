                                        <geom name="body_1_7" type="mesh" mesh="body7_mesh" pos="0 0 0" euler="0 180 0"/>
                                        <inertial pos="0 0 0" mass="50e-3" diaginertia="1 1 1"/>
                                        <body name="top_plate" pos="40.294e-3 0 0" euler="0 0 -90">
